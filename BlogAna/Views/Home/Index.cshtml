@model List<Postagem>

@{
    ViewData["Title"] = "Home Page";
}
<div class="container">

    <div class="p-5 mb-4 bg-secondary rounded-3 text-white text-center">
        <h1 class="display-3 fw-bold">Blog da Ana<h1>
                <p class="fs-4">Noticias sobre Literatura e Tecnologia</p>
    </div>
    <div class="row row-cols-1 row-cols-md-3 g-3">
        @foreach (Postagem postagem in Model)
        {
            <div class="col ">
                <div class="card h-100">
                    <div class="row h-100 g-0">
                        <div class="col-md-4">                            
                            <img src="@postagem.Thumbnail" class="img-fluid rounded-start h-100 object-fit-cover" alt="@postagem.Nome"> <!--object-fit-cover para a imagem ocupar todo o espaço sem perder qualidade, porem pode perder espaço-->
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <button class="btn btn-sm btn-dark mb-2">
                                    @postagem.Categoria.Nome
                                </button>
                                <h5 class="card-title">@postagem.Nome</h5>
                                <p class="card-text">@postagem.Descricao</p>
                                <p class="card-text d-flex justify-contetent-between"></p>
                                <p class="card-text"><small class="text-body-secondary">Postado em:
                                        @postagem.DataPostagem.ToString("dd/MM/yyyy")</small>
                                         <a asp-action="Postagem" asp-route-id="@postagem.Id">Ler Mais</a>
                                        </p>                               
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
